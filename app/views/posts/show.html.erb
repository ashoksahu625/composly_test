<h2><%= @post.title %></h2>

<p><%= @post.body %></p>

<p><%= @post.author_type %></p>

<% if user_signed_in? %>

<ul>
  <li><%= link_to "Edit", edit_post_path(@post) %></li>
  <li><%= link_to "Destroy", post_path(@post), data: { turbo_method: :delete,
                    turbo_confirm: "Are you sure?"} %>  
   </li>
</ul>
<% end %>