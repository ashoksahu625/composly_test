<% if user_signed_in? %>
  <h2> Only Current user Posts</h2>
<% else %>
  <h2> All Posts</h2>
<% end %>
<table>
	<thead><th>title</th><th>body</th><th>author_type</th><th>User email</th></thead>
   <tbody>

  <% @posts.each do |post| %>
    <tr>
	    <td>
	      <%= post.title %>
	    </td>
	    <td>
	      <%= post.body %>
	    </td>
	    <td>
	      <%= post.author_type %>
	    </td>
	    <td>
	      <%= post.user_email %>
	    </td>
	    <td>
	    	<%= link_to "Show", post_path(post) %>
	    	<% if user_signed_in? %>
		    	<%= link_to "Edit", edit_post_path(post) %>
		    	<%= link_to "Destroy", post_path(post), data: { turbo_method: :delete,
	                    turbo_confirm: "Are you sure?"} %>
	        <% end %>            
	    </td>
	</tr>
  <% end %>
</thead>
</table>
<% if user_signed_in? %>
  <%= link_to "New post", new_post_path %>
<% end %>  
