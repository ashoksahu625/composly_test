<%= form_for(post,:html=>{:id=>"post_form",:remote=>true}) do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body %><br>
  </div>

    <div>
	  <%= form.label :author_type %><br>
	  <%= form.select :status, ['User', 'Guest', 'Admin'], selected: 'User' %>
	</div>

  <div>
    <%= form.submit %>
  </div>
<% end %>